{
  "name": "claude-code-gmail-skill",
  "version": "1.0.0",
  "description": "Claude Code skill for Gmail management via natural language",
  "type": "module",
  "scripts": {
    "auth": "node .claude/skills/gmail/scripts/auth.js",
    "list": "node .claude/skills/gmail/scripts/list.js",
    "get": "node .claude/skills/gmail/scripts/get.js",
    "send": "node .claude/skills/gmail/scripts/send.js",
    "search": "node .claude/skills/gmail/scripts/search.js",
    "modify": "node .claude/skills/gmail/scripts/modify.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:functional": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/functional",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "googleapis": "^105.0.0",
    "open": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude-code",
    "gmail",
    "email",
    "skill"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": ["js", "mjs"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      ".claude/skills/gmail/scripts/lib/**/*.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
